default_platform(:ios)

platform :ios do
  desc "Run all tests"
  lane :test do
    run_tests(
      scheme: "CadenceLifeInMusic",
      devices: ["iPhone 16 Pro"],
      clean: true
    )
  end

  desc "Build for testing"
  lane :build do
    build_app(
      scheme: "CadenceLifeInMusic",
      configuration: "Debug",
      skip_archive: true,
      skip_codesigning: true,
      clean: true
    )
  end

  desc "Upload to TestFlight (requires Apple Developer Program)"
  lane :beta do
    increment_build_number(
      xcodeproj: "CadenceLifeInMusic.xcodeproj"
    )
    
    build_app(
      scheme: "CadenceLifeInMusic",
      configuration: "Release",
      export_method: "app-store"
    )
    
    upload_to_testflight(
      skip_waiting_for_build_processing: true
    )
  end

  desc "Prepare for App Store release (requires Apple Developer Program)"
  lane :release do
    increment_version_number(
      bump_type: "patch"
    )
    
    build_app(
      scheme: "CadenceLifeInMusic",
      configuration: "Release",
      export_method: "app-store"
    )
    
    upload_to_app_store(
      submit_for_review: false,
      automatic_release: false
    )
  end
end
